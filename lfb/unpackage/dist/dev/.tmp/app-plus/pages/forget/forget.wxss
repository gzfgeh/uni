.login_bg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0rpx;
  left: 0rpx;
  z-index: -1;
}
.contain {
  width: 100%;
  height: 100%;
}
.get_code_txt {
  font-size: 28rpx;
  color: #107EFF;
}
.code {
  width: 300rpx;
}
.head_wrap {
  padding: 20rpx 32rpx 20rpx;
}
.head_wrap ._img {
  width: 28rpx;
  height: 28rpx;
}
.logo_wrap {
  margin: 80rpx auto 100rpx;
  text-align: center;
}
.logo_wrap ._img {
  width: 210rpx;
  height: 240rpx;
}
.login_wrap {
  padding: 40rpx 80rpx 0rpx;
}
.row_wrap {
  border-bottom: 2rpx solid #E3E3E3;
}
.login_wrap ._div {
  padding: 0rpx 8rpx;
  margin-bottom: 30rpx;
}
.login_wrap ._img {
  width: 24rpx;
  height: 40rpx;
  margin-right: 40rpx;
}
.login_wrap input {
  margin-bottom: 0rpx;
  border: none;
  background: transparent;
}
::-webkit-input-placeholder {
  color: #999999;
  font-size: 28rpx;
}
.forget_wrap {
  text-align: right;
  padding-right: 100rpx;
  color: #107EFF;
  font-size: 28rpx;
}
