/* pages/component/oftenUseAddress/index.wxss */
/* 常用地址 */
.oftenUse_address_view{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
  background-color:rgba(0,0,0,.5);
}
.oftenUse_address {
  width: 534rpx;
  height: 666rpx;
  position: fixed;
  left: calc(50% - 267rpx);
  top: calc(50% - 333rpx);
  box-sizing: border-box;
  padding: 26rpx 26rpx 0 26rpx;
  overflow-y: scroll;
  border-radius: 16rpx;
  background-color: #fff;
  z-index: 99;
}
.oftenUse_title{
  color: #4A4A4A;
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.oftenUse {
  width: 100%;
  height: 160rpx;
  border-bottom: 2rpx solid#F2F2F2;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  /* outline: 1rpx solid red; */
}

.oftenUse_left {
  width: 380rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  /* outline: 1px solid red; */
}

.oftenUse_left_address,.oftenUse_left_detailAddress {
  width: 100%;
  color: #4A4A4A;
  font-weight: bold;
  font-size: 28rpx;
}

.oftenUse_left_detailAddress{
  font-size: 24rpx;
}

.oftenUse_left_namePhone {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #8e8f90;
  font-weight: normal;
  font-size: 28rpx;
}

.oftenUse_left_name {
  max-width: 40%;
  margin-right: 5%;
}

.oftenUse_left_phone {
  width: 55%;
}

.oftenUse_clickImg{
  width: 44rpx;
  height: 44rpx;
  margin-left: 30rpx
}