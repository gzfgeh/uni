/* pages/riderCancelOrder/index.wxss */
page,.riderCancelOrder{
  width: 100%;
  height: 100%;
  background-color: #FCFCFC;
}
.content{
  width: 100%;
  box-sizing: border-box;
  padding: 26rpx 36rpx 80rpx;
  background-color: #fff;
}
.title{
  color: #4A4A4A;
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 80rpx;
}
.cancelReason{
  width: 100%;
  height: 350rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.reason1,.reason2{
  width: 320rpx;
  height: 350rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.reason1_content,.reason2_content{
  width: 320rpx;
  height: 274rpx;
  background-color: #F5D200;
  border-radius: 16rpx;
  box-sizing: border-box;
  padding: 50rpx 32rpx;
  color: #4A4A4A;
  font-size: 28rpx;
  font-weight: bold;
}
.reason2_content{
  background-color: #F2F2F2;
}

.sureCancel{
  width: 410rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #F5D200;
  text-align: center;
  line-height: 100rpx;
  color: #4A4A4A;
  font-size: 28rpx;
  font-weight: normal;
  margin: 300rpx auto  0;
}