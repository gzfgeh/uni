/* pages/riderCheckOrder/index.wxss */

page, .riderCheckOrder {
  width: 100%;
  height: 100%;
  background-color: #fcfcfc;
}

.riderCheckOrder map {
  width: 100%;
  height: 375rpx;
}

/* 地址 */

.choosedAddress {
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.address {
  width: 678rpx;
  box-shadow: 0px 6rpx 6rpx rgba(0, 0, 0, 0.1);
  /* outline: 1rpx solid red; */
}

.navType2_helpMeTake {
  width: 100%;
  box-sizing: border-box;
  padding: 0 24rpx;
  background-color: #fff;
  border-radius: 16rpx;
  /* outline: 1rpx solid red; */
}

.navType2_helpMeTake_common {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.imageLogo_common {
  width: 80rpx;
  height: 80rpx;
}

.navType2_helpMeTake_common2 {
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  /* outline: 1px solid red; */
}

.navType2_helpMeTake_common2_special {
  width: 80%;
  color: #4a4a4a;
  font-weight: bold;
  font-size: 28rpx;
}

.navType2_helpMeTake_common2_view1 {
  width: 100%;
  color: #4a4a4a;
  font-weight: bold;
  font-size: 28rpx;
}

.navType2_helpMeTake_common2_subview1 {
  width: 100%;
  margin: 10rpx 0;
  color: #4a4a4a;
  font-weight: bold;
  font-size: 24rpx;
}

.navType2_helpMeTake_common2_namephone {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #8e8f90;
  font-weight: normal;
  font-size: 28rpx;
}

.navType2_helpMeTake_common2_view2 {
  margin-right: 20rpx;
}

.oftenUse_common {
  width: 124rpx;
  height: 62rpx;
  background-color: #f5d200;
  color: #000;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 62rpx;
  text-align: center;
  border-radius: 120rpx;
}

/* 订单明细列表 */
.orderDetail{
  width: 100%;
  box-sizing: border-box;
  padding: 0 26rpx;
  background-color: #fff;
}
.orderDetail_content{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
}
.titleCommon{
  width: 20%;
  padding: 30rpx 0;
  text-align: left;
  color: #4A4A4A;
  font-size: 28rpx;
  font-weight: bold;
}
.contentCommon{
  width: 75%;
  padding: 30rpx 0;
  white-space: pre-wrap;
  color:#8E8F90;
  font-size: 28rpx;
  font-weight: normal;
}
.submit{
  width: 410rpx;
  height: 100rpx;
  background-color: #F5D200;
  text-align: center;
  line-height: 100rpx;
  border-radius: 50rpx;
  color: #4A4A4A;
  font-size: 28rpx;
  font-weight: normal;
  margin: 120rpx auto 40rpx;
}
.submit::after{
  border: none;
}


