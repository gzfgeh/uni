
.content {
	height: 400rpx;
	position: relative;
}
.module_content{position: relative; height: 236rpx; border-bottom: 2rpx solid #E3E3E3; margin: 0rpx 30rpx;}
.module_content swiper{padding: 30rpx;}
.module_content swiper ._img{width: 64rpx; height: 64rpx; margin-bottom: 14rpx;}
.head_img{width: 100%;height: 400rpx!important;}
.dots{display: -webkit-box;display: -webkit-flex;display: -ms-flexbox;display: flex;-webkit-box-orient: horizontal;-webkit-box-direction: normal;-webkit-flex-direction: row;-ms-flex-direction: row;flex-direction: row;-webkit-box-pack: center;-webkit-justify-content: center;-ms-flex-pack: center;justify-content: center;-webkit-box-align: center;-webkit-align-items: center;-ms-flex-align: center;align-items: center;position: absolute;bottom: 20rpx;height: 20rpx;width: 100%;z-index: 100;}
.dot_normal{width: 10rpx;height: 10rpx;border-radius: 50%;background-color: #E0E5ED;margin: 0rpx 6rpx;position: relative;z-index: 100;}
.active{width: 24rpx;height: 10rpx;border-radius: 40%;background-color: #107EFF;z-index: 100;}
.home_head_wrap{position: absolute;top: 80rpx; width: 100%; color: #FFFFFF; font-size: 24rpx; padding: 0rpx 20rpx; -webkit-box-sizing: border-box; box-sizing: border-box;}
.home_head_left ._span{font-size: 24rpx; overflow: hidden;width: 130rpx;white-space: nowrap;-o-text-overflow:ellipsis;text-overflow:ellipsis;}
.home_head_left ._img{width: 24rpx; height: 24rpx; margin-left: 5rpx;}
.msg_wrap{position: relative;}
.msg_wrap ._img{width: 50rpx; height: 40rpx;}
.red_hot{width: 20rpx; height: 20rpx; position: absolute;right: 0rpx; top: 0rpx;background-color: red; z-index: 2;border-radius: 50%;}
.search_wrap{position: relative;border-radius: 36rpx; background-color: rgba(244, 244, 244, 0.75); -webkit-box-flex: 1; -webkit-flex: 1; -ms-flex: 1; flex: 1;height: 72rpx; margin: 0rpx 40rpx; padding-left: 20rpx; color: #9B9B9B; font-size: 28rpx;}
.search_wrap ._img{width: 28rpx; height: 28rpx; margin-right: 20rpx;}
.more_wrap{margin-top: 60rpx; padding: 0rpx 30rpx; color: #333333; font-size: 44rpx;}
.more_wrap ._img{width: 36rpx; height: 42rpx; margin-right: 16rpx;}
.more_item{font-size: 24rpx; color: #999999;}
.scroll-Y{ white-space: nowrap; width: 100%; -webkit-box-sizing: border-box; box-sizing: border-box;padding: 30rpx;}
.scroll-Y .item_wrap{white-space: nowrap;}
.swipe_scroll_x_item{-webkit-box-shadow:  0px 0px 2px #ccc;box-shadow:  0px 0px 2px #ccc; color: #333333; font-size: 28rpx; width: 180rpx!important; height: 220rpx; padding-top: 50rpx; -webkit-box-sizing: border-box; box-sizing: border-box; display: inline-block; margin-left: 30rpx;}
.swipe_scroll_x_item image{width: 80rpx; height: 80rpx;
}
::-webkit-scrollbar{width: 0;height: 0;background-color: transparent;
}
.bottom_wrap{padding: 5%; -webkit-box-sizing: border-box; box-sizing: border-box;
}
.bottom_wrap ._img{width: 100%; margin-bottom: 60rpx;}


