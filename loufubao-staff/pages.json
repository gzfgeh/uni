{
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/login/login",
			"style" : {
				"navigationStyle": "custom",
				"app-plus":{
					"titleNView":false
				}
		    }
		},
		{
			"path": "pages/home/home",
			"style" : {
				"navigationBarTitleText": "首页",
				"app-plus": {
					"titleNView": {
						"splitLine": {
							"color": "#111111"
						}
					}
				}
		    }
		}
        ,{
            "path" : "pages/records/records",
            "style" : {
            	"navigationBarTitleText": "核销记录",
            	"enablePullDownRefresh": true,
            	"onReachBottomDistance": 150,
            	"app-plus": {
            		"pullToRefresh": {
            		    "support": true,
            		    "color": "#107EFF",
            		    "style": "circle"
            		}
            	},
            	"h5":{
            		"pullToRefresh": {
            		    "support": true,
            		    "color": "#107EFF",
            		    "style": "circle"
            		}
            	}
            }
        }
        ,{
            "path" : "pages/records_detail/records_detail",
            "style" : {
				"navigationBarTitleText": "核销"
			}
        }
    ],
	"condition": { //编译模式配置，仅开发期间生效  
        "current": 0, //当前激活的编译模式（list 的索引项）  
        "list": [{  
            "name": "楼服宝员工端", //模式名称  
            "pathName": "pages/home/home", //启动页面，必选  
            "query": "id=1" //启动参数, QueryString 格式  
        }]  
    },
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "楼服宝员工端",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8",
		"app-plus":{
			"compatible": {
				"ignoreVersion": true
			}
		}
	}
}
